# IPruBudEx Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# =====================

# Database Connection URL
# Format depends on your chosen provider:
#
# PostgreSQL (Default - Supabase):
#   postgresql://user:password@host:port/database?schema=public
#
# MySQL:
#   mysql://user:password@host:port/database
#
# SQL Server:
#   sqlserver://host:port;database=database;user=user;password=password
#
# SQLite:
#   file:./dev.db

DATABASE_URL=""

# Database Provider
# NOTE: To switch database providers, you must manually edit prisma/schema.prisma
# Change the datasource.provider field to one of: postgresql | mysql | sqlserver | sqlite
# After changing, run: npm run prisma:generate
# Default: postgresql (Supabase)

# Application Configuration
# =========================

# Flask API Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# Deployment Configuration
# ========================

# Vercel (Frontend)
VERCEL_URL=

# Render (Backend)
RENDER_URL=
