# IPruBudEx Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# =====================

# Database Connection URL
# Format depends on your chosen provider:
#
# PostgreSQL (Default - Supabase):
#   postgresql://user:password@host:port/database?schema=public
#
# MySQL:
#   mysql://user:password@host:port/database
#
# SQL Server:
#   sqlserver://host:port;database=database;user=user;password=password
#
# SQLite:
#   file:./dev.db

DATABASE_URL=""

# Database Provider (for runtime switching)
# Options: postgresql | mysql | sqlserver | sqlite
DB_PROVIDER=postgresql

# Supabase Configuration (when using Supabase PostgreSQL)
# ========================================================
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Application Configuration
# =========================

# Flask API Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
PORT=5000

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# AI Configuration
# ================

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Security Configuration
# ======================

# Maximum failed login attempts before account lock
MAX_LOGIN_ATTEMPTS=3

# JWT Token expiration (in minutes)
JWT_EXPIRATION_MINUTES=480

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Deployment Configuration
# ========================

# Vercel (Frontend)
VERCEL_URL=

# Render (Backend)
RENDER_URL=

# Production Database URL (set in deployment platform)
# DATABASE_URL will be set by hosting provider
